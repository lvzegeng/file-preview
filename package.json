{
  "name": "view-file",
  "version": "1.0.6",
  "description": "",
  "main": "dist/view-file.cjs.js",
  "unpkg": "dist/view-file.umd.min.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "npm version patch&&npm publish",
    "test-publish": "npm publish --dry-run",
    "build-cjs": "webpack --config ./config/webpack.config.cjs.js",
    "build-umd": "webpack --config ./config/webpack.config.umd.js"
  },
  "files": [
    "dist",
    "example",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvzegeng/file-preview.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lvzegeng/file-preview/issues"
  },
  "homepage": "https://github.com/lvzegeng/file-preview#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.jsx,.ts,.tsx --fix",
      "git add"
    ],
    "**/*.{css,less}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{html,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "style-loader": "^1.1.3",
    "stylelint": "^13.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "nprogress": "^0.2.0"
  }
}
