{
  "name": "view-file",
  "version": "1.0.8",
  "description": "在线预览文件",
  "source": "src/index.js",
  "main": "dist/view-file.js",
  "module": "dist/view-file.mjs",
  "umd:main": "dist/view-file.umd.js",
  "unpkg": "dist/view-file.umd.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "npm version patch&&npm publish",
    "test-publish": "npm publish --dry-run",
    "build": "microbundle --format es,cjs&&microbundle --format umd --external none",
    "dev": "microbundle watch --format umd --external none"
  },
  "files": [
    "dist",
    "example",
    "src"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvzegeng/file-preview.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lvzegeng/file-preview/issues"
  },
  "homepage": "https://github.com/lvzegeng/file-preview#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.jsx,.ts,.tsx --fix",
      "git add"
    ],
    "**/*.{css,less}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{html,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.0",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "microbundle": "^0.11.0",
    "prettier": "^1.19.1",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {
    "nprogress": "^0.2.0"
  }
}
